-- Simple sphere to represent the Sun
local Sun = {
    Name = "Sun",
    Renderable = {
        Parent = sunParentName,
        Type = "RenderablePlanet",
        Frame = "IAU_SUN",
        Body = "SUN", 
        Geometry = {
            Type = "SimpleSphere",
            Radius = 6.957E8,
            Segments = 100
        },
        Textures = {
            Type = "simple",
            Color = texturesPath .. "/sun.jpg",
        },
        PerformShading = false,
    }
}

-- Billboard to represent the sun
local SunGlare = {
    Name = "SunGlare",
    Parent = sunParentName,
    Renderable = {
        Type = "RenderablePlane",
        Size = 1.3*10^10.5,
        Origin = "Center",
        Billboard = true,
        Texture = texturesPath .. "/darkuniverse_glare.png",
        BlendMode = "Additive"
    }
}

-- Marker for the sun
local SunMarker = {
    Name = "SunMarker",
    Parent = Sun.Name,
    Renderable = {
        Type = "RenderablePlane",
        Size = 3.0E11,
        Origin = "Center",
        Billboard = true,
        Texture = texturesPath .. "/marker.png",
        BlendMode = "Additive"
    },
    Transformation = {
        Translation = {
            Type = "StaticTranslation",
            Position = {0, 0, 0, 5}
        }
    }
}

assetHelper.registerSceneGraphNodes(asset, {
    Sun,
    SunGlare,
    SunMarker
})
