local Sun, SunDependency = asset.importToggle('sun', true)
local Earth, EarthDependency = asset.importToggle('planets/earth', true)
--local MilkyWay, MilkyWayDependency = asset.importToggle('milkyway', false)

SunDependency.onInitialize = function () 
    openspace.setPropertyValue("SunMarker.renderable.enabled", false)
end

EarthDependency.onInitialize = function () 
    openspace.setPropertyValue("EarthMarker.renderable.enabled", false)
    openspace.setPropertyValue("Constellation Bounds.renderable.enabled", false)
end

