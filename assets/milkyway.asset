local sunTransforms = asset.import('sun/transforms')
local assetHelper = asset.import('assethelper')

local textureFolder = asset.syncedResource("textures")

local MilkyWay = {
    Name = "MilkyWay",
    Parent = sunTransforms.SolarSystemBarycenter.Name,
    Renderable = {
        Type = "RenderableSphere",
        Size = 10E22,
        Segments = 40,
        Texture = textureFolder .. "/DarkUniverse_mellinger_8k.jpg",
        Orientation = "Inside/Outside"
    }
}

asset.export("MilkyWay", MilkyWay);

asset.addSynchronization({
    Type = "ResourceSynchronization"
    Destination = textureFolder,
    Identifier = "milkyway_textures",
    Version = 2
});

assetHelper.registerSceneGraphNodes(asset, {MilkyWay})