local assetHelper = asset.import('assethelper')
local sunTransforms = asset.import('sun/transforms')

local EarthBarycenter = {
    Name = "EarthBarycenter",
    Parent = sunTransforms.SolarSystemBarycenter.Name,
    Transform = {
        Translation = {
            Type = "SpiceTranslation",
            Body = "EARTH",
            Observer = "SUN"
        }
    }
}

local EarthInertial = {
    -- The default reference frame for Earth-orbiting satellites
    Name = "EarthInertial",
    Parent = asset.EarthBarycenter.Name,
    Transform = {
        Rotation = {
            Type = "SpiceRotation",
            SourceFrame = "J2000",
            DestinationFrame = "GALACTIC",
        }
    },
}

local EarthIau = {
    Name = "EarthIau",
    Parent = asset.EarthBarycenter.Name,
    Transform = {
        Rotation = {
            Type = "SpiceRotation",
            SourceFrame = "IAU_EARTH",
            DestinationFrame = "GALACTIC",
        }
    }
}

assetHelper.registerSceneGraphNodes(asset, {
    EarthBarycenter,
    EarthInertial,
    EarthIau
})

asset.export("EarthBarycenter", EarthBarycenter)
asset.export("EarthInertial", EarthInertial)
asset.export("EarthIau", EarthIau)